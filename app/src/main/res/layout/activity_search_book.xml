<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/view_toolbar"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/teal_200"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view_search_background"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/bg_round_all"
            app:layout_constraintBottom_toBottomOf="@id/view_toolbar"
            app:layout_constraintEnd_toEndOf="@id/view_toolbar"
            app:layout_constraintStart_toStartOf="@id/view_toolbar"
            app:layout_constraintTop_toTopOf="@id/view_toolbar" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edit_search"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginHorizontal="5dp"
            android:background="@null"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:padding="5dp"
            android:text="@={viewModel.searchWord}"
            app:layout_constraintBottom_toBottomOf="@id/view_search_background"
            app:layout_constraintEnd_toStartOf="@id/btn_search"
            app:layout_constraintStart_toStartOf="@id/view_search_background"
            app:layout_constraintTop_toTopOf="@id/view_search_background" />
        <!--android:onEditorActionListener="@{viewModel.editorActionListener}"-->

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_search"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/ic_baseline_search_24"
            android:backgroundTint="@color/teal_200"
            android:onClick="searchBook"
            app:layout_constraintBottom_toBottomOf="@id/view_search_background"
            app:layout_constraintEnd_toEndOf="@id/view_search_background"
            app:layout_constraintTop_toTopOf="@id/view_search_background" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_search_result"
            searchResult="@{viewModel.searchResult}"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="10dp"
            android:clipToPadding="false"
            android:overScrollMode="never"
            android:paddingHorizontal="5dp"
            android:paddingTop="14dp"
            android:paddingBottom="16dp"
            android:visibility="visible"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_toolbar"
            app:spanCount="2" />

        <TextView
            android:id="@+id/txt_search_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:text="책 제목, 제은이 등을 검색해 보세요."
            android:textSize="18sp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_toolbar" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <data>

        <import type="android.content.Context" />

        <variable
            name="viewModel"
            type="com.cont96roller.library.adapter.SearchBookViewModel" />

    </data>

</layout>